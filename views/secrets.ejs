<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <ul>
      <% secrets.forEach(function(secret){ %>
        <form action="/delete" method="POST">
          <li class="secret-text"><input type="checkbox" name="secret"  value="<%= secret.secret%>" onChange="this.form.submit()"><%=secret.secret%></li>
        </form>
      <% }) %>
    </ul>

    <footer><i>Delete any secret you wish just by checking its checkbox</i></footer>
    
    <hr>

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-default btn-lg" href="/secrets" role="button">Delete Secrets</a>
  </div>
</div>

<%- include('partials/footer') %>
